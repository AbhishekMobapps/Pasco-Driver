<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_coupon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="Coupon Image"/>

    <TextView
        android:id="@+id/tv_coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coupon_title"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_coupon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coupon_type"
        android:textSize="@dimen/normal_txt_size_12" />

    <TextView
        android:id="@+id/tv_coupon_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coupon_code"
        android:textSize="@dimen/normal_txt_size_12" />

    <TextView
        android:id="@+id/tv_coupon_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_date"
        android:textSize="@dimen/normal_txt_size_12" />

    <TextView
        android:id="@+id/tv_coupon_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_date"
        android:textSize="@dimen/normal_txt_size_12" />

    <TextView
        android:id="@+id/tv_coupon_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/limit"
        android:textSize="@dimen/normal_txt_size_12" />

    <TextView
        android:id="@+id/tv_poi_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/point_address"
        android:textSize="@dimen/normal_txt_size_12" />

    <TextView
        android:id="@+id/tv_poi_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/point_city"
        android:textSize="@dimen/normal_txt_size_12" />

    <TextView
        android:id="@+id/tv_poi_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/point_description"
        android:textSize="@dimen/normal_txt_size_12" />
</LinearLayout>
