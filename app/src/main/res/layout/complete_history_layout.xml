<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/NewConstraintDetailsss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/order_details_radius"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".93">

        <TextView
            android:id="@+id/bookingstatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:text="Hello"
            android:textColor="@color/green"
            android:textSize="@dimen/normal_txt_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/invoice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/invoice"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/invoice"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/earth_yellow"
            android:gravity="center"
            android:text="Invoice"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_txt_size"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/dateTimeDriHis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:text="24 May 2024 8:10 PM"
            android:textColor="@color/logo_color"
            android:textSize="@dimen/normal_txt_size_12"
            app:layout_constraintBottom_toBottomOf="@+id/invoice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/invoice"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintOrderPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateTimeDriHis"
            app:layout_constraintWidth_percent=".93">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/codddasdas"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImgYellow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle_background_yellow"
                    android:tint="@color/logo_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/pickUpDetailsDriHis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="B 36, B Bloack sector 59 noida"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/normal_txt_size_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/circleImgYellow"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/dotted_lines_yellow"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/constraintDropORD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintOrderPrice" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintDropORD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintOrderPrice"
            app:layout_constraintWidth_percent=".93">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/codddORD"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/circleImgBlack"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/DropDetailsDriHis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="B 36, B Bloack sector 59 noida"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/normal_txt_size_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/circleImgBlack"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/consDiatnceORD"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/darkWhite"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintDropORD" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nameAndPendingConst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/consDiatnceORD"
            app:layout_constraintWidth_percent="0.93">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardImgDriver"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".12">


                <ImageView
                    android:id="@+id/driverProfileCth"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/user"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/clientNameDriHis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Mansi"
                android:textColor="@color/logo_color"
                android:textSize="@dimen/normal_txt_size"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/cardImgDriver"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".3" />

            <!-- First TextView -->
            <TextView
                android:id="@+id/finalCostStatic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/final_cost"
                android:textColor="@color/grey"
                android:textSize="@dimen/normal_txt_size_12"
                app:layout_constraintStart_toEndOf="@+id/clientNameDriHis"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/totalCostDriverHis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="$200"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_txt_size13"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/clientNameDriHis"
                app:layout_constraintTop_toBottomOf="@+id/finalCostStatic"
                app:layout_constraintWidth_percent=".2"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/arrivalTimeStatic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Arrival time"
                android:textColor="@color/grey"
                android:textSize="@dimen/normal_txt_size_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".25"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/arrivalTimeDriverHis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="45:00"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_txt_size13"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/arrivalTimeStatic"
                app:layout_constraintWidth_percent=".25"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textColor="@color/logo_color"
            android:textSize="@dimen/normal_txt_size"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/nameAndPendingConst" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>